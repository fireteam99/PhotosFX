<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:id="borderPane"
            fx:controller="com.photos.controllers.AdminController" stylesheets="/css/common.css, /css/admin.css"
            styleClass="background">
    <top>
        <HBox alignment="CENTER" prefWidth="${borderPane.width}" maxWidth="${borderPane.width}"
              minWidth="${borderPane.width}">
            <fx:include source="header.fxml" fx:id="header" minWidth="${borderPane.width}" />
        </HBox>
    </top>
    <center>
        <StackPane>
            <children>
                <StackPane alignment="BOTTOM_RIGHT">
                    <children>
                        <ListView fx:id="adminListView" prefWidth="200.0"/>
                        <Button fx:id="adminCreateUserButton" mnemonicParsing="false"
                                onAction="#adminCreateUser" styleClass="btn-floating"
                                text="+" alignment="BOTTOM_RIGHT" />
                    </children>
                </StackPane>
                <HBox alignment="CENTER_LEFT">
                    <fx:include source="sidebar.fxml" fx:id="sidebar" />
                </HBox>
            </children>
        </StackPane>
    </center>
</BorderPane>
